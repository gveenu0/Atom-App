<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.homepage.HomeActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hg10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <ImageView
        android:id="@+id/img_home"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:src="@drawable/img_home"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/txt_home_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/hg10" />

    <TextView
        android:id="@+id/txt_home_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/home_txt1"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_home_2"
        />

    <TextView
        android:id="@+id/txt_home_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/home_txt2"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt_home_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/hg70"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hg70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>